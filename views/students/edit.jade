extends ../layout

block content
	.col-md-3
	.col-md-6
		h1 Edit Student Info
		if errors
			for message in errors
				p(style="color:red") #{message}
		form(action='/students/' + student._id + '/edit' , method="POST")
			div 
				label Student Name
				input.form-control(type="text", name="name", value='#{student.name}')
			div
				label Student Phone Number
				input.form-control(type="text" name="number", value='#{student.number}')
			div
				br
				input.form-control(type="submit" value="Submit")
	.col-md-3